<% content_for :extra_assets do %>
<% end %>

<!-- Header -->
<header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">ihoshii allows you to</div>
      <div class="intro-heading">Find what you need</div>
      <a href="#portfolio" class="page-scroll btn btn-xl">Get Started</a>
    </div>
  </div>
</header>

<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Services</h2>
        <h3 class="section-subheading text-muted">What do you need?</h3>
      </div>
    </div>
    <div class="row">
      <% @services.categories.each do |subcategory| %>
        <div class="col-md-4 col-sm-6 portfolio-item">
          <!--<a href="#portfolioModal1" class="portfolio-link" data-toggle="modal">-->
          <%= link_to category_posts_path(subcategory), :class => "portfolio-link" do %>
            <div class="portfolio-hover">
              <div class="portfolio-hover-content">
                <i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
            <i class="fa <%= subcategory.icon %> fa-6x"></i>
          <% end %>
          <div class="portfolio-caption">
            <!--<h4><%= subcategory.name %></h4>-->
            <p class="text-muted"><%= subcategory.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
